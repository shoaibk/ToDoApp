<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMauiApp.LoginPage">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Login" HorizontalOptions="Center"></Label>
        <Entry x:Name="usernameEntry" Placeholder="Enter username" Keyboard="Plain"></Entry>
        <Entry x:Name="passwordEntry" Placeholder="Enter password" IsPassword="true"></Entry>
        <Button Text="Login" Clicked="LoginClicked"/>
    </VerticalStackLayout>
</ContentPage>