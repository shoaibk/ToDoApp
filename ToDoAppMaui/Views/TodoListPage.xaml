<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMaui.Views.TodoListPage"
             Title="My Todos">

    <Grid Padding="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0"
               Text="My Todo List"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <!-- Todo List -->
        <CollectionView Grid.Row="1" 
                        x:Name="TodoList">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <Label Grid.Column="0"
                               Text="{Binding Title}"
                               FontSize="16"
                               VerticalOptions="Center" />
                               
                        <Label Grid.Column="1"
                               FontSize="16"
                               VerticalOptions="Center">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="True">
                                    <Setter Property="Text" Value="✓" />
                                    <Setter Property="TextColor" Value="Green" />
                                </DataTrigger>
                                <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="False">
                                    <Setter Property="Text" Value="○" />
                                    <Setter Property="TextColor" Value="Orange" />
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <!-- Empty State -->
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No todos yet!"
                           FontSize="16"
                           HorizontalOptions="Center" />
                    <Label Text="Tap 'Add Todo' to get started"
                           FontSize="14"
                           HorizontalOptions="Center"
                           Margin="0,5,0,0" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Add Button - 固定在底部 -->
        <Button Grid.Row="2"
                x:Name="AddButton"
                Text="Add Todo"
                Clicked="OnAddTodoClicked"
                Margin="0,20,0,0" />

    </Grid>

</ContentPage>