<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMaui.Views.TodoListPage"
             Title="My Todos"
             BackgroundColor="#F5F5F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Label Grid.Row="0" 
               Text="My Todo List"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               TextColor="#2E7D32"
               Margin="20" />

        <!-- Todo List -->
        <CollectionView Grid.Row="1" 
                        x:Name="TodoList"
                        Margin="20,0">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border BackgroundColor="White" 
                            StrokeShape="RoundRectangle 10" 
                            Margin="0,5" 
                            Padding="15"
                            Shadow="{Shadow Brush=Gray, Offset='2,2', Radius=4}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   Text="{Binding Title}"
                                   FontSize="16"
                                   TextColor="Black"
                                   VerticalOptions="Center" />
                                   
                            <Label Grid.Column="1"
                                   FontSize="16"
                                   VerticalOptions="Center">
                                <Label.Triggers>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="True">
                                        <Setter Property="Text" Value="✓" />
                                        <Setter Property="TextColor" Value="Green" />
                                    </DataTrigger>
                                    <DataTrigger TargetType="Label" Binding="{Binding IsCompleted}" Value="False">
                                        <Setter Property="Text" Value="○" />
                                        <Setter Property="TextColor" Value="Orange" />
                                    </DataTrigger>
                                </Label.Triggers>
                            </Label>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
            <!-- Empty State -->
            <CollectionView.EmptyView>
                <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                    <Label Text="No todos yet!"
                           FontSize="18"
                           TextColor="#666666"
                           HorizontalOptions="Center" />
                    <Label Text="Tap 'Add Todo' to get started"
                           FontSize="14"
                           TextColor="#999999"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0" />
                </StackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Add Button -->
        <Button Grid.Row="2"
                x:Name="AddButton"
                Text="Add Todo"
                Clicked="OnAddTodoClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="18"
                HeightRequest="55"
                CornerRadius="25"
                Margin="20" />

    </Grid>

</ContentPage>