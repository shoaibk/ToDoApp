<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMaui.Views.RegistrationPage"
             Title="Registration">

    <VerticalStackLayout Spacing="15" Padding="30,0" VerticalOptions="Center">
        
        <Entry 
            x:Name="Username"
            Placeholder="Username"
            HorizontalOptions="Fill" />

        <Entry 
            x:Name="Password"
            Placeholder="Password"
            IsPassword="True"
            HorizontalOptions="Fill" />

        <Button 
            x:Name="RegisterBtn"
            Text="Register"
            Clicked="OnRegisterClicked"
            HorizontalOptions="Fill" />

    </VerticalStackLayout>

</ContentPage> 