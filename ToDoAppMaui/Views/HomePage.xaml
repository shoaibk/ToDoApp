<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ToDoAppMaui.Views.HomePage"
    Title="Welcome">
    <VerticalStackLayout
        Padding="30"
        Spacing="20"
        VerticalOptions="Center">
        <Button
            Text="Login"
            Clicked="OnLoginClicked"
            FontSize="18"
            HeightRequest="50" />
        <Button
            Text="Register"
            Clicked="OnRegisterClicked"
            FontSize="18"
            HeightRequest="50" />
    </VerticalStackLayout>
</ContentPage>