<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMaui.Views.AddTodoPage"
             Title="Add Todo"
             BackgroundColor="#F5F5F5">

    <Grid>
        <VerticalStackLayout Spacing="30" Padding="40" VerticalOptions="Center">
            
            <!-- Page Title -->
            <Label 
                Text="Add New Todo"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#2E7D32"
                Margin="0,0,0,20" />

            <!-- Todo Title Input -->
            <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="True">
                <Entry 
                    x:Name="TodoTitleEntry"
                    Placeholder="Enter todo title..."
                    PlaceholderColor="#999999"
                    TextColor="Black"
                    FontSize="16"
                    Margin="15,10"
                    MaxLength="200" />
            </Frame>

            <!-- Add Button -->
            <Button 
                x:Name="AddButton"
                Text="Add Todo"
                Clicked="OnAddTodoClicked"
                BackgroundColor="#4CAF50"
                TextColor="White"
                FontSize="18"
                HeightRequest="55"
                CornerRadius="25"
                Margin="0,20,0,0" />

            <!-- Cancel Button -->
            <Button 
                x:Name="CancelButton"
                Text="Cancel"
                Clicked="OnCancelClicked"
                BackgroundColor="Transparent"
                TextColor="#666666"
                FontSize="16"
                HeightRequest="45"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>