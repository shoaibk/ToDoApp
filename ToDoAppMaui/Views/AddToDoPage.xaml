<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoAppMaui.Views.AddToDoPage"
             Title="Add Todo">
    <VerticalStackLayout Padding="18" Spacing="16">
        <Entry x:Name="TodoEntry" Placeholder="Making todo's can be fun!" />
        <Label x:Name="ErrLabel" TextColor="Red" IsVisible="False" />
        <Button Text="Add Todo Item" Clicked="OnAddTodoClicked"/>
    </VerticalStackLayout> 
</ContentPage>