<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ToDoAppMaui.LoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Login"
             BackgroundColor="#F5F5F5">

    <Grid>
        <VerticalStackLayout Spacing="30" Padding="40" VerticalOptions="Center">
            
            <Label 
                Text="Welcome Back"
                FontSize="28"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                TextColor="#2E7D32"
                Margin="0,0,0,20" />

            <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="True">
                <Entry 
                    x:Name="UsernameEntry"
                    Placeholder="Enter username"
                    PlaceholderColor="#999999"
                    TextColor="Black"
                    FontSize="16"
                    Margin="15,10" />
            </Frame>

            <Frame BackgroundColor="White" CornerRadius="10" Padding="0" HasShadow="True">
                <Entry 
                    x:Name="PasswordEntry"
                    Placeholder="Enter password"
                    IsPassword="True"
                    PlaceholderColor="#999999"
                    TextColor="Black"
                    FontSize="16"
                    Margin="15,10" />
            </Frame>

            <Button 
                x:Name="LoginButton"
                Text="Login"
                Clicked="OnLoginClicked"
                BackgroundColor="#2196F3"
                TextColor="White"
                FontSize="18"
                HeightRequest="55"
                CornerRadius="25"
                Margin="0,20,0,0" />

            <Button 
                x:Name="BackButton"
                Text="Back to Home"
                Clicked="OnBackClicked"
                BackgroundColor="Transparent"
                TextColor="#666666"
                FontSize="16"
                HeightRequest="45"
                Margin="0,10,0,0" />

        </VerticalStackLayout>
    </Grid>

</ContentPage>