<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             
             x:Class="ToDoAppMaui.views.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Login"  Margin="16"/>
            <Entry x:Name="EntryUsername" Placeholder="username"  Margin="16" Keyboard="Plain"/>
            <Entry x:Name="EntryPassword" Placeholder="password"  Margin="16" IsPassword="True"/>
            <Button
                Text="Login"
                HorizontalOptions="Fill"
                Clicked="OnLoginClicked"
                Margin="16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>



