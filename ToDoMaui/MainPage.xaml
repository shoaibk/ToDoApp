<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoMaui.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button
                x:Name="RegisterNavBtn"
                Text="Register" 
                SemanticProperties.Hint="Navigate to Register page"
                Clicked="NavController"
                HorizontalOptions="Fill" />
            <Button
                x:Name="LoginNavBtn"
                Text="Login" 
                SemanticProperties.Hint="Navigate to Login Page"
                Clicked="NavController"
                HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
