<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoMaui.RegisterPage">
    <ContentPage.Content>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Entry
                x:Name="UsernameRegEntry"
                Placeholder="Username"
                HorizontalOptions="Fill" />
            <Entry
                x:Name="PasswordRegEntry"
                Placeholder="Password"
                HorizontalOptions="Fill" />
            <Button
            x:Name="RegisterReqBtn"
            Text="Register" 
            SemanticProperties.Hint="Register new Account"
            Clicked="RegistrationController"
            HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>